@model CargoSupport.ViewModels.Manange.OrderOptionViewModel;
@{
    ViewData["Title"] = "Ta bort order";
}

@using (Html.BeginForm("DeleteRoutesByOrderId", "Manage", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <td>Välj order du vill ta bort från databasen (Detta går inte att återställa)</td>
        </tr>
        <tr>
            <td>
                <select asp-for="@Model.SelectedOrderId" asp-items="@(new SelectList(Model.RoutesToSelectFrom,"Key","Value"))">
                    <option>Välj</option>
                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input class="btn btn-outline-danger" type="submit" value="Delete" /></td>
        </tr>
    </table>
}

@section Scripts
{
}