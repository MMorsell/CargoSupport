@model CargoSupport.Models.DatabaseModels.WhitelistModel;
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("AddOrUpdateUser", "Manage", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Hämta från pin</th>
        </tr>
        <tr>
            <td>Namn med domän: </td>
            <td>
                @Html.TextBoxFor(m => m.NameWithDomain)
            </td>
        </tr>

        <tr>
            <td>Roll: </td>
            <td>
                <select asp-for="RoleLevel" asp-items="Html.GetEnumSelectList<CargoSupport.Enums.RoleLevel>()">
                    <option selected="selected" value="">Välj roll</option>
                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}

@section Scripts
{
}