                    { data: 'numberOfBreadBoxes.value', title: 'Bröd', render: itemIncrementInput },
                    { data: 'controlIsDone', title: 'Kontroll', render: simple_checkbox },
                ],
                "order": [[1, "asc"]],

            });
            $('thead th').each(function () {
