@model CargoSupport.Models.DatabaseModels.WhitelistModel;
@{
    ViewData["Title"] = "Redigera användare";
}

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <table>
        <tr>
            <td><input hidden asp-for="@Model._Id" type="text" /></td>
        </tr>
        <tr>
            <td>Namn med domän</td>
            <td><input asp-for="@Model.NameWithDomain" type="text" /></td>
        </tr>
        <tr>
            <td>Behörighetsnivå</td>
            <td><select class="selectpicker show-tick" asp-for="@Model.RoleLevel" asp-items="Html.GetEnumSelectList<CargoSupport.Enums.RoleLevel>()"></select></td>
        </tr>
        <tr>
            <td><input class="btn btn-outline-success" type="submit" value="Spara" /></td>
        </tr>
    </table>
</form>