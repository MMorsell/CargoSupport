            { x: "2020-08-26", y: 47 },
            { x: "2020-08-28", y: 44 },
            { x: "2020-08-15", y: 11 }]
        var timeFormat = 'YYYY-MM-DD';
        var config = {
            type: 'bar',
            data: {
                datasets: [
                    {
                        label: "Antal kunder",
                        data: xCustomerData,
                        fill: false,
                        backgroundColor: 'red'
                    },
                    {
                        label: "Antal kilo",
