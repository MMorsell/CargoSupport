                            barPercentage: 0.5,
                            display: true,
                            labelString: 'Datum'
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                        },
                        scaleLabel: {
                            display: true,
                            labelString: 'Antal'
                        }
                    }]
                }
            }
        };

        window.onload = function () {
            var ctx = document.getElementById("MainCanvas").getContext("2d");
            window.myLine = new Chart(ctx, config);
        };
    </script>
}